          "sameAs": "https://en.wikipedia.org/wiki/Troon"
        },
        {
          "@type": "City",
          "name": "Kilmarnock",
          "sameAs": "https://en.wikipedia.org/wiki/Kilmarnock"
        },
        {
          "@type": "City",
          "name": "Irvine",
          "sameAs": "https://en.wikipedia.org/wiki/Irvine,_North_Ayrshire"
        },
        {
          "@type": "City",
          "name": "Glasgow",
          "sameAs": "https://en.wikipedia.org/wiki/Glasgow"
        }
      ],
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Ayr",
        "addressRegion": "Ayrshire",
        "addressCountry": "GB"
      },
      "sameAs": [],
      "serviceType": [
        "Web Design",
        "Website Redesign",
        "SEO",
        "On-page SEO",
        "Google Business Profile Optimization",
        "Landing Page Design",
